{
  "name": "livesplit",
  "version": "1.0.0",
  "description": "A version of LiveSplit that works on a lot of platforms.",
  "main": "index.js",
  "scripts": {
    "build:core": "node buildCore.js",
    "start": "webpack-dev-server --open",
    "start:electron": "webpack --electron && electron dist/electron",
    "serve": "webpack-dev-server",
    "build": "webpack",
    "publish": "webpack -p"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "org.livesplit.one",
    "productName": "LiveSplit One",
    "copyright": "Copyright (c) 2016 Christopher Serr and Sergey Papushin",
    "asar": true,
    "publish": null,
    "files": [
      "!package.json",
      "!node_modules/**/*",
      {
        "from": "dist/electron",
        "to": "."
      }
    ],
    "directories": {
      "buildResources": "src/assets",
      "output": "dist/electron-pkg"
    },
    "win": {
      "target": "zip",
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "mac": {
      "icon": "src/assets/icon.icns",
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "@types/commonmark": "^0.27.1",
    "@types/react": "^16.7.6",
    "@types/react-color": "^2.13.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-sidebar": "^3.0.0",
    "@types/react-toastify": "^4.0.1",
    "babel-polyfill": "^6.26.0",
    "commonmark": "^0.28.1",
    "commonmark-react-renderer": "^4.3.4",
    "emojilib": "^2.4.0",
    "react": "^16.6.3",
    "react-color": "^2.14.1",
    "react-contextmenu": "^2.10.0",
    "react-dom": "^16.6.3",
    "react-linkifier": "^4.0.0",
    "react-sidebar": "^3.0.2",
    "react-toastify": "^4.4.3",
    "react-twemoji": "0.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@types/node": "^10.12.10",
    "awesome-typescript-loader": "^5.2.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.4",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-pwa-manifest": "^3.7.1"
  }
}
